{% extends 'base.html.twig'%}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Hello !{% endblock %}
{% block stylesheets %}<link href="{{ asset('css/registration.css') }}" type="text/css" rel="stylesheet">{% endblock %}

{% block body %}
{% include ('mininavbar.html.twig') %}
<h1>Inscription</h1>

{{ form_start(form)}}

{{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr':
{'placeholder': 'Entrez votre nom d\'utilisateur'}}) }}
{{ form_row(form.email, {'label': 'Adresse email', 'attr':
{'placeholder': 'Entrez votre adresse email'}}) }}
{{ form_row(form.password, {'label': 'Mot de passe', 'attr':
{'placeholder': 'Entrez votre mot de passe'}}) }}
{{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr':
{'placeholder': 'Confirmez votre mot de passe'}}) }}

<button type="submit" class="btn btn-success">M'inscrire</button>

{{ form_end(form) }}

{% endblock %}